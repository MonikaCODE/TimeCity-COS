import mods.tconstruct.Alloy;
import mods.tconstruct.Casting;
import mods.tconstruct.Melting;
import crafttweaker.item.IIngredient;
import crafttweaker.item.IItemStack;

/// Disable Electrum Pickaxe Head Casting
//mods.tconstruct.Alloy.removeRecipe(<liquid:electrum>);
mods.tconstruct.Casting.removeTableRecipe(<tconstruct:pick_head>.withTag({Material: "electrum"}), <liquid:electrum>);

/// Disable Gold Armor Melting
mods.tconstruct.Melting.removeRecipe(<liquid:gold>, <minecraft:golden_helmet>);
mods.tconstruct.Melting.removeRecipe(<liquid:gold>, <minecraft:golden_chestplate>);
mods.tconstruct.Melting.removeRecipe(<liquid:gold>, <minecraft:golden_leggings>);
mods.tconstruct.Melting.removeRecipe(<liquid:gold>, <minecraft:golden_boots>);

/// Disable Hammer Head Casting
mods.tconstruct.Casting.removeTableRecipe(<tconstruct:hammer_head>);

